DOCKER_HOST_OR_IP="non localhost IP"

# === VAST Database Connection ===
# Endpoint must include http:// or https://
VAST_ENDPOINT="http://localhost:5432"
VAST_DATA_ENDPOINTS=${VAST_ENDPOINT}
VAST_ACCESS_KEY="your-access-key-here"
VAST_SECRET_KEY="your-secret-key-here"
VAST_BUCKET="observability"
VAST_SCHEMA="observability"

# === Kafka Configuration ===
# Internal broker for service communication
KAFKA_BOOTSTRAP_SERVERS="kafka-ingestion:9092"
# Consumer group for the processor
KAFKA_GROUP_ID="vastdb_processor"
# Topics to consume
KAFKA_TOPICS="otel-metrics,raw-logs,raw-queries,raw-host-logs"

# === PostgreSQL Source Database ===
# Credentials for the application and load simulator
POSTGRES_HOST="postgres"
POSTGRES_PORT=5432
POSTGRES_DB="app_db"
POSTGRES_USER="app_user"
POSTGRES_PASSWORD="app_password"

# === PostgreSQL Monitoring User (for collectors) ===
# Read-only user for metrics and log collection
MONITOR_USER="monitor_user"
MONITOR_PASSWORD="monitor_password"

# === Collector Configuration ===
COLLECTION_INTERVAL=30
ENVIRONMENT="development"

# === Load Simulator Configuration ===
QUERY_RATE=10
SLOW_QUERY_PROBABILITY=0.1
WRITE_PROBABILITY=0.3
SYSLOG_PROBABILITY=0.2

# === Processor Configuration ===
MAX_BATCH_SIZE=100
MAX_BATCH_AGE_SECONDS=10
ENABLE_ENRICHMENT=true

# === Trino ===
TRINO_VERSION=429

# === Superset Configuration ===
# Secret key for Superset
SUPERSET_SECRET_KEY="this_is_a_dev_key_change_me_32_chars"
ADMIN_PASSWORD="admin"
SUPERSET_LOAD_EXAMPLES="no"

# Superset metadata database (PostgreSQL) - Connection string for Superset app
DATABASE_DIALECT="postgresql+psycopg2"
DATABASE_HOST="superset-db"
DATABASE_PORT="5432"
DATABASE_USER="superset"
DATABASE_PASSWORD="superset"
DATABASE_DB="superset"

# Credentials for initializing the superset-db container
SUPERSET_POSTGRES_USER="superset"
SUPERSET_POSTGRES_PASSWORD="superset"
SUPERSET_POSTGRES_DB="superset"

# Example database credentials (if SUPERSET_LOAD_EXAMPLES=yes)
EXAMPLES_USER="examples"
EXAMPLES_PASSWORD="examples"
EXAMPLES_HOST="superset-db"
EXAMPLES_PORT="5432"
EXAMPLES_DB="examples"

# Superset cache (Redis)
REDIS_HOST="superset-redis"
REDIS_PORT="6379"
REDIS_CELERY_DB="0"
REDIS_RESULTS_DB="1"
