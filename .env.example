# === VAST Database Connection ===
# Endpoint must include http:// or https://
VAST_ENDPOINT="http://localhost:5432"
VAST_ACCESS_KEY="your-access-key-here"
VAST_SECRET_KEY="your-secret-key-here"
VAST_BUCKET="observability"
VAST_SCHEMA="observability"

# === Kafka Configuration ===
# Internal broker for service communication
KAFKA_BOOTSTRAP_SERVERS="kafka-ingestion:9092"
# Consumer group for the processor
KAFKA_GROUP_ID="vastdb_processor"
# Topics to consume
KAFKA_TOPICS="otel-metrics,raw-logs,raw-queries,raw-host-logs"

# === PostgreSQL Source Database ===
# Credentials for the application and load simulator
POSTGRES_HOST="postgres"
POSTGRES_PORT=5432
POSTGRES_DB="app_db"
POSTGRES_USER="app_user"
POSTGRES_PASSWORD="app_password"

# === PostgreSQL Monitoring User (for collectors) ===
# Read-only user for metrics and log collection
MONITOR_USER="monitor_user"
MONITOR_PASSWORD="monitor_password"

# === Collector Configuration ===
COLLECTION_INTERVAL=30
ENVIRONMENT="development"

# === Load Simulator Configuration ===
QUERY_RATE=10
SLOW_QUERY_PROBABILITY=0.1
WRITE_PROBABILITY=0.3
SYSLOG_PROBABILITY=0.2

# === Processor Configuration ===
MAX_BATCH_SIZE=100
MAX_BATCH_AGE_SECONDS=10
ENABLE_ENRICHMENT=true
